extends /layout
block content
  .container
    h1 Update User Permission
    form.form-horizontal(action='/user/permission/save', method='post', role='form')
      input(type='hidden', name='id', value=permission.id)
      .form-group
        label.control-label.col-sm-2 Interface
        .col-sm-10
          select(name='interface')
            each iface, ifaceName in interfaces
              if(ifaceName === permission.interface)
                option(value=ifaceName, selected='selected')= iface.title
              else
                option(value=ifaceName)= iface.title
      .form-group
        label.control-label.col-sm-2 URI
        .col-sm-10
          input.form-control(type='text', name='uri', placeholder='URI', value=permission.uri)
      .form-group
        label.control-label.col-sm-2 Level
        .col-sm-10
          select(name='level')
            each level,levelValue in permissionLevels
              if(levelValue == permission.level)
                option(value=levelValue, selected='selected')= level.name
              else
                option(value=levelValue)= level.name
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-success(type='submit') Save